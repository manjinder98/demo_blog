<%= content_for :page_title, @post.title %>


<% if @post == false %>
  <section class="hero is-medium is-danger is-bold">
    <div class="hero-body">
      <div class="container">
        <p class="title">
          Error while edit!
        </p>
        <p class="subtitle">
          Please try again!
        </p>
      </div>
    </div>
  </section>
<% end %>

<section class="section">
  <div class="container">
    <nav class="level">
      <!-- left side -->
      <div class="level-left">
        <p class="level-item">
          <strong>Actions</strong>
        </p>
      </div>

      <div class="level-right">
        <p class="level-item">
          <%= link_to "Edit", edit_post_path(@post), class: "button is-secondary" %>
        </p>
        <p class="level-item">
          <!-- TODO -->
          <%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure? "}, class: "button is-danger" %>
        </p>
      </div>
    </nav>
    <hr />
    <h1 class="title">
      Content:
    </h1>
    <div class="content">
      &emsp; <%= @post.content %>
    </div>
</div>
</section>

<section class="comments">
</section>