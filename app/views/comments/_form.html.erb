<%= simple_form_for([@post, @post.comments.build]) do |f| %>
  <%= f.error_notification %>
  <% @post.errors.full_messages.each do |msg| %>
    <div class="notification is-danger">
      <%= msg %>
    </div>
  <% end %>
  <div class="field">
    <div class="control">
      <%= f.input :name, input_html: {class: 'input'}, wrapper: false, :error => false, label_html: {class: 'label'} %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.input :comment, input_html: {class: 'textarea'}, wrapper: false, :error => false, label_html: {class: 'label'} %>
    </div>
  </div>
  <%= f.button :submit, class: "button is-primary" %>
<% end %>
